# 出欠管理システム Node.js バックエンド環境変数

# サーバー設定
NODE_ENV=development
PORT=3001
HOST=localhost

# データベース設定
DB_HOST=localhost
DB_NAME=sotsuken
DB_USER=server
DB_PASS=pass
DB_PORT=3306

# JWT設定
JWT_SECRET=i24103_attendance_system_jwt_secret_key_2024_secure_production
JWT_EXPIRES_IN=86400

# CORS設定
# 開発環境: http://localhost:3000 (フロントエンドのポート)
# 本番環境: http://192.168.12.200:3000 またはカンマ区切りで複数指定可能
CORS_ORIGIN=http://localhost:3000

# レート制限設定
RATE_LIMIT_WINDOW=900
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=50

# アプリケーション設定
APP_NAME=出欠管理システム
APP_VERSION=1.0.0
